<h1>Add a New Restaurant</h1>

<%= form_with(model: @restaurant, url: restaurants_path) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.select :category, Restaurant::CATEGORIES %>
  </div>

  <%= form.submit "Create Restaurant" %>
<% end %>
